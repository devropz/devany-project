{% extends '_layouts/base.njk' %}

{% block page_title %}Discography{% endblock %}

{% block content %}


<div class="album py-5">
  <div class="container">
    <div class="row">
    {% for album in queen.discography %}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img src="/img/discs/{{ album.image }}" alt="album image" class="card-img-top">
          <div class="card-body">
            <h4>{{album.title}}</h4>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">{{album.year}}</small>
              </div>
          </div>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>               


{% endblock %}